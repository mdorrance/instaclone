<%= render partial: 'layouts/feed_nav' %>
<div class="row">

  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-2">
            <%= image_tag current_user.image_url, class: "img-responsive img-circle",
                        alt: "#{current_user.name} image" %>
          </div>
          <div class="col-sm-8">
            <p class="text-left"><%= current_user.name %></p>
          </div>
          <div class="col-sm-2">
            <p>1 d</p>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <%= image_tag current_user.image_url, class: "img-responsive",
                      alt: "#{current_user.name} image" %>
      </div>
      <div class="panel-footer">
        <p>#yourock, #awesome</p>
        <hr>
        <div class="row">
          <div class="col-sm-1" id="heart">
            <i class="fa fa-heart-o fa-lg"></i>
          </div>
          <div class="col-sm-9" id="comment">
            <input type="text" class="form-control" placeholder="Comment ...">
          </div>
          <div class="col-sm-2">
            <div class="dots">
              <span>&#x25cb;</span><span>&#x25cb;</span><span>&#x25cb;</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
